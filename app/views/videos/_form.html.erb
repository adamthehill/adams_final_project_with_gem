<%= form_for @video do |f| %>

<p>
<p style="color: yellow">
<%= f.label :video_title %>
<%= f.text_field :video_title %>
</p>
<p style="color: yellow">
<%= f.label :embed_url %>
<%= f.text_field :embed_url %>
</p>

<p style="color: yellow">
<%= f.label :tag_list, "Add New Tags (separated by commas)" %>
<%= f.text_field :tag_list %>
</p>

<%= f.submit %>

<% end %>